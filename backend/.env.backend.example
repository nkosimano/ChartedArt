# ============================================
# Backend Environment Variables
# ============================================
# These should be configured in AWS SAM parameters
# or AWS Secrets Manager, NOT in the frontend .env

# Supabase Service Role Key (ADMIN ACCESS)
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Stripe Secret Key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# AWS Region
AWS_REGION=us-east-1

# S3 Bucket Name (will be created by SAM)
S3_BUCKET_NAME=chartedart-uploads-{account-id}

# Email Configuration (AWS SES)
SES_FROM_EMAIL=noreply@chartedart.com
SES_REGION=us-east-1
